;
;       CRSIN - Coloca o cursor nas coordenadas contidas em DX
;
; ±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±

CRSIN:  PUSH AX,BX
        MOV AH,2        ; DX tr†z valor para as cordenadas.
        XOR BH,BH
        INT 16
        POP BX,AX
        RET

SAVCURSOR:
        PUSH AX,BX
        XOR BH,BH
        MOV AH,3
        INT 010
        MOV [PCURSOR],DX
        POP BX,AX
        RET

CALPO: PUSH AX,BX
       MOV AL,BH
       MOV BH,160
       MUL BH
       XOR BH,BH
       ADD BL,BL
       ADD AX,BX
       MOV DI,AX
       POP BX,AX
       RET

SAVE1  :
       PUSH DI
       MOV DI,4000
       JMP SHORT SAVESCR
SAVE2  :
       PUSH DI
       MOV DI,8000
       JMP SHORT SAVESCR
SAVE3  :
       PUSH DI
       MOV DI,12000
SAVESCR:
       PUSH AX,CX,SI,DS,ES
       MOV AX,[ECRAN]
       MOV DS,AX
       MOV ES,AX
       MOV CX,2000
       XOR SI,SI
       CLD
       REP MOVSW
       POP ES,DS,SI,CX,AX
       POP DI
       RET

REST1: PUSH SI
       MOV SI,4000
       JMP SHORT RESTSCR
REST2: PUSH SI
       MOV SI,8000
       JMP SHORT RESTSCR
REST3: PUSH SI
       MOV SI,12000
RESTSCR:
       PUSH AX,CX,DI,DS,ES
       XOR DI,DI
       MOV AX,[ECRAN]
       MOV DS,AX
       MOV ES,AX
       MOV CX,2000
       CLD
       REP MOVSW
       POP ES,DS,DI,CX,AX
       POP SI
       RET

COPIA_STRING0:          ; Esta rotina vai passar o conte£do de uma string,
                        ; cujo endereáo Ç passado em SI (origem), para uma outra,
                        ; cujo endereáo Ç passado em DI (destino). Se AX for
                        ; 1, entÑo s¢ se anula aquela vari†vel cujo endereáo
                        ; foi passado em DI. Caso contr†rio, copia-se. Ambas as
                        ; strings devem acabar em 0.
       PUSH DI
  L0:  CMP B[DI],0      ; Se um byte de destino contiver 0, entÑo j† se chegou
       JE >L1           ; ao fim, e salta-se.
       MOV B[DI],0      ; Caso contr†rio, zera-se o byte corrente,
       INC DI           ; aponta-se para o pr¢ximo,
       JMP SHORT L0     ; e repete-se o ciclo.
  L1:  POP DI
       CMP AX,1         ; Se AX contiver 1, entÑo nÑo se passa daqui.
       JE RET
  L2:  CMP B[SI],0      ; Se um byte de origem corrente contiver zero,
       JE RET           ; chegou-se ao fim da string origem. RETorna-se.
       MOV AL,B[SI]
       MOV B[DI],AL     ; Caso contr†rio, copia-se,
       INC DI           ; incrementa-se os apontadores
       INC SI
       JMP SHORT L2     ; e volta-se a repetir o ciclo.

UPCASE:                      ; Esta rotina converte o valor ASCII de AL
                             ; para mai£sculas, se AL for uma letra min£scula.
                             ; Note-se que ignora os caracteres especiais
                             ; (†,ä,á,etc.), ou entÑo... asneira !
        CMP AL,':'           ; Se se tratarem dos dois pontos, nÑo se lhes
        JE >L3               ; toca, senÑo d† barraca.
        SUB AL,'0'           ; ê um algarismo ?
        JC >L2               ; NÑo... ê menor !
        CMP AL,10            ; ê ?
        JB >L2               ; Se for, nÑo se converte.
        ADD AL,'0'           ; Restaura-se o valor original de AL...
        JE >L3
        AND AL,0DF           ; E converte-se para mai£sculas.
        JMP >L3              ; RETorna-se.
   L2:
        ADD AL,'0'           ; Restaura-se AL.
   L3:
        RET

START:

        PUSH ES         ; Verifica-se se este programa j† se encontra
        MOV AX,03516h   ; residente em mem¢ria
        INT 33
