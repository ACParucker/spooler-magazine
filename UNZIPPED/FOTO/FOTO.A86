GR_ECRA:
       PUSH AX,DX,CX,DI,ES

       MOV B[CONTA],0

  L0:  MOV DX,FICHEC     ; Abre-se o ficheiro...
       MOV CX,0          ;
       MOV AH,05B        ;
       INT 021h          ;
       IF C JMP ERRO     ; Erro ?

       MOV [HANDLE],AX   ; Guarda-se o handle do ficheiro do ecrÑ
                         ; Preparam-se os registos para a leitura do ecrÑ:

       MOV DI,JANELA
       CALL ESCREVE
       MOV DI,GRAVA
       CALL ESCREVE

       MOV ES,[ECRAN]    ; Segmento inicial da mem¢ria v°deo
       MOV DI,4000       ; Offset do local onde comeáa o ecrÑ anteriormente
                         ; guardado
       CMP B[F_BIN],'˚'
       JE >L01
       MOV CX,2000       ; N£mero de bytes a ler, se for s¢ texto.
       JMP SHORT >L1
  L01: MOV CX,4000       ; N£mero de bytes a ler, se for bin†rio.

  L1:  ES MOV AX,W[DI]   ; Là-se um byte...
       MOV [DADOS],AL    ; e pìe-se numa vari†vel na mem¢ria, por causa da
                         ; futura gravaáÑo.
       MOV BX,[HANDLE]   ; Preparam-se os registos para a escrita
       MOV DX,DADOS
       PUSH CX
       MOV CX,1          ; Escreve-se no ficheiro...
       MOV AH,040h       ; ê a funáÑo 40h do INT 21h, e o offset dos dados vem
       INT 021h          ; em DX; em CX vem o nß de bytes a escrever.
       POP CX
       CMP AX,0          ; Se AX=0,isso significa que o ficheiro nÑo foi escrito
       JE ERRO           ; Erro ?
       CMP B[F_BIN],'˚'  ; O formato Ç de um ficheiro bin†rio ?
       JNE >L10          ; Se nÑo for, prossegue-se normalmente para texto.
       INC DI            ; Se for, tambÇm se gravam os atributos de cor.
       JMP SHORT >L11    ; Assim, o contador s¢ Ç incrementado de um byte.
                         ; SenÑo,
  L10: ADD DI,2          ; incrementa-se o apontador aos dados do ecrÑ de 2 bytes,
  L11: INC B[CONTA]      ; incrementa-se o contador de caracteres por linha.
       CMP B[F_BIN],'˚'  ; Se for um ficheiro bin†rio,
       JE >L2            ; nÑo se grava a sequància CR/LF.
