  L1:
        CMP AL,020           ; ê um espaáo ?
        JE >L2               ; Se for, nÑo interessa. Repete-se.
        CMP AL,00            ; Se for um caracter nulo, isso quer dizer que
        JE >L3               ; houve barraca. Sai-se daqui a todo o g†s !
        CMP AL,0D            ; ê o caracter que indica que a string de parÉmetros
        JE >L3               ; chegou ao fim ? Se for, vamos embora.
        CMP BX,'FT'          ; O programa j† estava instalado ?
        JE >L2               ; Se sim, nÑo se altera o nome do ficheiro de ecrÑ.
        CALL UPCASE          ; Converte-se AL para mai£sculas.
        MOV [DI],AL          ; Guarda-se o byte ( atÇ que enfim !)
        INC DI               ; Incrementa-se o apontador para a string destino
        MOV B[PAR],0FF       ; e pîe-se uma flag a on para dizer que nÑo est†
                             ; vazia ( a string... ).
  L2:   LODSB                ; Là-se agora o pr¢ximo byte da string de
                             ; parÉmetros.
        JMP SHORT L1
  L3:
        RET

