       MOV DX,DADOS      ; de texto esquisitos.
       PUSH CX
       MOV CX,1          ; Escreve-se no ficheiro...
       MOV AH,040h       ;
       INT 021h          ;
       POP CX
       CMP AX,0
       JE ERRO           ; Erro ?
       MOV B[DADOS],10xD
       MOV BX,[HANDLE]
       MOV DX,DADOS
       PUSH CX
       MOV CX,1          ; Escreve-se no ficheiro...
       MOV AH,040h       ;
       INT 021h          ;
       POP CX
       CMP AX,0
       JE ERRO           ; Erro ?
 L2 :  LOOP L1           ; Repete-se o ciclo CX vezes

       MOV BX,[HANDLE]   ; Fecha-se o ficheiro...
