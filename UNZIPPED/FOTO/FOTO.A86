       CALL ESCREVE
       POP AX
       CMP AL,050        ; Ser† que se tentou abrir um ficheiro existente ?
       JNE >L4
       MOV DI,FEXIST     ; Tentou-se.
       CALL ESCREVE      ; Escreve-se a mensagem correspondente.
