 L1:    POP DI,SI,AX

        PUSH ES         ; ObtÇm-se o end. do vector do Int16h (leitura do teclado)
        MOV AX,03516h
        INT 33          ; End. do Int16h em ES:BX
        MOV [OLD16],BX
        MOV [OLD16+2],ES
        POP ES

        MOV [ASSIN],'FT'; Marca com assinatura

        XOR DX,DX

        MOV AH,9
        MOV DX,TXT_1
        INT 021         ; Imprime msg. a confirmar a instalaáÑo.

        CMP B[PAR],0FF  ; Foram passados parÉmetros ?
        JE >L2          ; Foram. NÑo se escreve a sintaxe.
        MOV AH,9
        MOV DX,TXT_3
        INT 021

L2:     MOV DX,TXT_4    ; Escreve-se o texto que antecede o nome do
        MOV AH,9        ; ficheiro de ecrÑ.
        INT 021
        MOV B[FICHEC][TAMNF][-3],13  ; Prepara-se a string para escrever
        MOV B[FICHEC][TAMNF][-2],10  ; o nome do ficheiro de imagem, por
        MOV B[FICHEC][TAMNF][-1],'$' ; causa do INT 21h.
        MOV AH,9
        MOV DX,FICHEC
        INT 021                      ; E escreve-se.
        MOV B[FICHEC][TAMNF][-3],' '
        MOV B[FICHEC][TAMNF][-2],' '
        MOV B[FICHEC][TAMNF][-1],' ' ; Volta-se a pìr tudo como estava.

        MOV B[GR_ANT],0FF

        MOV AX,02516h
