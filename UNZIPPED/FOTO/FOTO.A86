ESCREVE:                     ; Esta rotina escreve uma string de dados no
                             ; ecrÑ, com os seguintes dados:
       MOV ES,[ECRAN]        ; Valor do segmento de v°deo
       MOV SI,DI             ; Em DI vem o offset da string de dados
       XOR DI,DI
  L1:
       MOV AL,B[SI]          ; Pìe-se um byte de dados em AX...
       CMP AL,0              ; Se for zero, Ç porque j† se chegou ao fim.
       JE >L4                ; Salta-se para o RETorno

       CMP AL,1              ; Se AX for 1, vai-se mudar a posiáÑo do texto
       JNE >L2
       INC SI                ; Aponta-se para o pr¢ximo byte...
       MOV BH,B[SI]          ; là-se a linha...
       INC SI
       MOV BL,B[SI]          ; a coluna...
       INC SI
       CALL CALPO            ; e calcula-se o offset v°deo (obrigado, Franco Gomes)
       JMP SHORT L1          ; E l† voltamos ao princ°pio...
  L2:
       CMP AL,2              ; Se AL for 2, Ç porque queremos mudar a cor.
       JNE >L3
       INC SI                ; Portanto, aponta-se para o byte que contÇm
       MOV AH,B[SI]          ; o repectivo atributo e actualiza-se.
       INC SI
       JMP SHORT L1          ; L† voltamos para tr†s ! Livra !
  L3:
       MOV ES:[DI],AX        ; Aqui, escreve-se na mem¢ria v°deo o byte de dados,
       ADD DI,2              ; com AH = cor e AL = caracter. Incrementa-se o
       INC SI                ; offset v°deo e o da string de dados...
       JMP L1                ; E recomeáa tudo outra vez.
  L4:
       RET                   ; RETornamos ao s°tio de onde nos chamaram...


; ±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±
;
;               INPUT - Là um car†cter do teclado e escreve-o no ecrÑ
;                       Detecta as teclas 'Enter', 'Escape', 'Backspace',
;                            'Home', 'End', '-> ', '<- ', 'Del' e 'Ins'.
;
;       Antes de chamar a rotina, DX deve conter as coordenadas iniciais;
;                                 CL o n£mero m†ximo de caracteres;
;                                 CH o atributo de cor;
;                                 DI o endereáo onde guardar a string
;
; ±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±

INPUT:  MOV [STRIN],DI
        MOV [LIN],DH
        MOV [COL],DL
        MOV BX,DX       ; DX tr†z coord. p/ o cursor; CL nß limite de caractere
        ADD CL,DL       ; BL = posiáÑo inicial
        DEC CL          ; CL = posiáÑo limite
        CALL STEND      ; Coloca o cursor no fim da palavra j† existente
                        ; (se existir)
        CMP B[JATEC],0  ; Se 'JATEC'=1 Ç porque j† vem em AX uma tecla para
        JZ >L0          ; analizar.
        CALL CRSIN
        MOV B[JATEC],0
        JMP >L1
L0:     CALL CRSIN      ; Coloca o cursor nas coord. DX
        MOV AH,0
        INT 22          ; Espera que uma tecla seja premida
L1:     CMP AL,0        ; O c¢digo ASCII vem em AL. Se AL=0 entÑo
        JZ >L3          ; foi premida uma tecla especial
        CMP AL,27       ; tecla 'Escape' ?
        JZ >L4
        CMP AL,13       ; Tecla 'Enter' ?
        JZ >L5
        CMP AL,9
        JZ >L8          ; Tecla 'TAB' ?
        CMP AL,8        ; Tecla 'Backspace' ?
        JZ >L6

        ; A partir daqui sÑo teclas para escrever

        MOV AH,[INSMD]  ; Và se modo insert ON
        CMP AH,1
        JZ >L7

L2:     CALL IMPRI
        CMP DL,CL
        JZ L0
        INC DL
        JMP L0

L3:     CALL SCODS
        JMP L0
L4:     RET
L5:     CALL ARMAZ
        JMP L4
L6:     CALL BCSPC
        JMP L0

L7:     CALL MKINS
        JMP L2
L8:     CALL MKTAB
        JMP L0

MKTAB:  INC DL
        MOV AL,DL
        XOR AH,AH
        MOV DL,8
        DIV DL
        INC AL
        MUL DL
        MOV DL,AL
        CMP DL,CL
        JA >L0
        RET
L0:     MOV DL,CL
        RET

MKINS:  CMP DL,CL
        JZ >L1
        PUSH BX,CX
        MOV BL,CL
        SUB CL,DL
        INC CL
        XOR CH,CH
        CALL CALPO
        MOV SI,DI
        DEC SI
        DEC SI
        MOV BX,[ECRAN]
L0:     PUSH DS,ES
        MOV DS,BX
        MOV ES,BX
        STD
        MOVSB
        DEC SI
        DEC DI
        POP ES,DS
        LOOP L0
        POP CX,BX
L1:     RET


RDCUR:  PUSH BX         ; Là o car†cter na pos. do cursor.
        MOV AH,8
        XOR BH,BH
        INT 16
        POP BX
        RET

IMPRI:  PUSH BX,CX ; Escreve car†cter na posiáÑo do cursor
        MOV BL,CH
        MOV AH,9
        XOR BH,BH
        MOV CX,1
        INT 16
        POP CX,BX
        RET

SCODS:  CMP AH,71       ; Tecla 'Home' ?
        JZ >L0
        CMP AH,79       ; Tecla 'End' ?
        JZ >L1
        CMP AH,75       ; Tecla '<-' ?
        JZ >L2
        CMP AH,77       ; Tecla '->' ?
        JZ >L3
        CMP AH,83       ; Tecla 'Del' ?
        JZ >L4
        CMP AH,82       ; Tecla 'Ins'
        JZ >L5
        RET
L0:     CALL SHOME
        RET
L1:     CALL STEND
        RET
L2:     CALL SESQU
        RET
L3:     CALL SEDIR
        RET
L4:     CALL STDEL
        RET
L5:     CALL STINS
        RET

SHOME:  MOV DL,BL
        RET
STEND:  PUSH AX
        MOV DL,CL
L0:     CALL CRSIN
        CALL RDCUR
        CMP AL,32
        JNZ >L1
        CMP DL,BL
        JZ >L2
        DEC DL
        JMP L0
L1:     CMP DL,CL
        JZ >L2
        INC DL
L2:     POP AX
        RET
SESQU:  CMP DL,BL
        JZ >L0
        DEC DL
L0:     RET
SEDIR:  CMP DL,CL
        JZ >L0
        INC DL
L0:     RET
STDEL:  MOV AL,32
        CALL IMPRI
        RET
STINS:  MOV AL,[INSMD]
        CMP AL,0
        JZ >L0
        XOR AL,AL
        CALL CRPEQ
        JMP >L1
L0:     MOV AL,1
        CALL CRGRD
L1:     MOV [INSMD],AL
        RET

CRPEQ:  PUSH AX,BX,CX
        MOV AH,3        ; cursor pequeno
        XOR BH,BH
        INT 16
        MOV CH,CL
        DEC CH
        MOV AH,1
        INT 16
        POP CX,BX,AX
        RET

CRGRD:  PUSH AX,BX,CX   ; Cursor grande
        MOV AH,3
        XOR BH,BH
        INT 16
        MOV AL,CL
        XOR AH,AH
        MOV CH,2
        DIV CH
        MOV CH,AL
        MOV AH,1
        INT 16
        POP CX,BX,AX
        RET

ARMAZ:  PUSH AX
        MOV BH,[LIN]
        MOV BL,[COL]
        CALL CALPO
        MOV ES,[ECRAN]
        MOV SI,[STRIN]
        MOV CX,TAMNF
L0:     ES MOV AX,[DI]
        CALL UPCASE
        MOV B[SI],AL
        INC DI,2
        INC SI
        LOOP L0
        POP AX
        RET

BCSPC:  CMP DL,BL
        JA >L0
        RET
L0:     PUSH BX,CX
        MOV BX,DX
        SUB CL,DL
        INC CL
        XOR CH,CH       ; CX = nß de caracteres a mudar
        CALL CALPO
        MOV SI,DI
        DEC DI
        DEC DI
        MOV AX,[ECRAN]
L1:     PUSH DS,ES
        MOV DS,AX
        MOV ES,AX
        CLD
        MOVSB
        INC SI
        INC DI
        POP ES,DS
        LOOP L1
        PUSH ES
        MOV ES,AX
        MOV AL,32
        STOSB
        POP ES
        POP CX,BX
        DEC DL
        RET

