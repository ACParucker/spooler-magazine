DiscoCheio:           ; >>>>>>>> Se o disco estiver cheio...
   call Fecha_Destino        ; Fechamos o ficheiro de destino corrente,
   mov ah, 041
   lea dx, Nome
   int 021                   ; apagamos o ficheiro fonte corrente,
