Fecha_Destino:         ; >>>>>>> Fechamos o ficheiro fonte e restauramos-lhe
                       ;         os atributos
   mov ah, 057               ; Recolocamos a hora e data original.
   mov al, 01
   mov bx, w HandleD
   mov cx, w Hora
   mov dx, w Dia
