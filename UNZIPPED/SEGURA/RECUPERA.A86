LeBackup:             ; >>>>>>>> Lemos um byte de ficheiro de backup
   mov ah, 03f
   mov bx, w HandleB
   mov cx, 1
   lea dx, Buffer
   int 021
   ret

LeHeader:             ; >>>>>>>> Lemos um header do ficheiro de backup
   mov ah, 03f
   mov bx, w HandleB
   mov cx, Tam_DTA
   lea dx, Atributo
