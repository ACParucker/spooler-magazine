; *********************** Tratamento de erros ********************************

Erro:
   cmp al, 2           ; Erro n£mero 2 (File not found) ?
   jne >l1
   lea dx, FichNEnc    ; Se sim, coloca-se em dx o endere‡o da mensagem.
   jmp >l8
l1:cmp al, 3           ; Erro n£mero 3 (Path not found) ?
   jne >l2
   lea dx, PathNEnc
   jmp >l8
l2:cmp al, 4           ; Erro n£mero 4 (No handles available) ?
   jne >l3
   lea dx, NoHandles
   jmp >l8
l3:cmp al, 5           ; Erro n£mero 5 (Access denied) ?
   jne >l4
   lea dx, AcDenied
   jmp >l8
   cmp al, 18          ; Erro n£mero 18 (No more files to be found) ?
   lea dx, FichNEnc    ; Neste est gio, equivale ao erro 2.
   jmp >l8
l4:cmp al, DrvInv      ; Erro ®Drive inv lida¯ ?
   jne >l5
   lea dx, Erro_Drv
   jmp >l8
l5:cmp al, MausPar     ; Erro ®Parƒmetros insuficientes¯ ?
   jne >l6
   lea dx, Erro_Util
   jmp >l8
