   xor ax, ax                ; Colocamos o buffer de destino a zeros
   mov di, si
   mov cx, 32                ; 32 * 2 = 64 bytes
   rep stosw
   mov ah, 047               ; Obtemos o nome do direct¢rio corrente.
   mov dl, 0                 ; Drive por defeito
   inc si                    ; Mais um, porque o DOS n„o d  o backslash (\)
   int 021                   ; antes do nome do direct¢rio.
   mov b[si-1], '\'          ; Por isso, n¢s pomo-lo l  !
